<config>

    <sprite name="Raven" module="overworld"> <!-- module is optional if the config is already targeting a module. If no modules the sprite is owned by the common module. -->
        <position X="150" Y="200" /> <!-- Optional, set to 0,0 if absent -->
        <size Height="200" Width="300" /> <!-- Optional, set size according to bitmap data if absent. -->
        
        <!-- form 1 -->
        <frames>
            <frame Id="raven_idle_0" />
            <frame Id="raven_idle_1" />
            <frame Id="raven_idle_2" />
            <frame Id="raven_idle_3" />
            <frame Id="raven_idle_4" />
        </frames>
        
        <!-- form 2 -->
        <frames> <!-- inclusive start and exclusive end -->
            <framelist start="0" end="5" step="1" pattern="raven_idle_%s" />
        </frames>
        
    </sprite>

</config>